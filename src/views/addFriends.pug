doctype html
html(lang='en')
	head
		title Activity
		//- link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		link(href ='css/addFriends.css' type='text/css' rel='stylesheet')
		link(href ='css/bottomNavbar.css' type='text/css' rel='stylesheet')
		link(href ='css/topNavbar.css' type='text/css' rel='stylesheet')
		link(href ='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
	body
		nav.navbar-fixed-top.navbar.navbar-default
			.row
				.col-xs-6.left.edit
				.col-xs-6.right.edit
				img.image(src='img/kwfLogo.png')
		.container
			.text-center
				.text-left.clickNames.wrapper-one
					form.wrapper-one(action='/addFriends', method='post', role='form')
						.checkbox.selectAll
							label

								//- input(type='checkbox', onclick='toggle(this)') 
								//- h3.selectAllStyle Select All

								input(type="checkbox", onclick='toggle(this)')
								span.cr
									i.cr-icon.glyphicon.glyphicon-ok
								|        <b>   Select All </b>

						each notFriend in notFriends
							//- .checkbox.checkBoxStyle.boks.checkbox-circle
							.checkbox
								label
									input(type="checkbox", value= notFriend.id, name='friends')
									span.cr
										i.cr-icon.glyphicon.glyphicon-ok
									|        <b>   #{notFriend.name} </b>
								//- h3.names.text-center #{notFriend.name} 
								img.foto(src=notFriend.image)
						button.btn.btn-success.btn.submit.submitStyle(type='submit') Add Friends
		.wrapper.navbar-fixed-bottom
			.box.box1
				a(href="/addFriends")
					i.fa.fa-user-plus(aria-hidden='true')
					h5 Vrienden
			.box.box2
				a(href="/index")
					i.fa.fa-list(aria-hidden='true')
					h5 Activiteiten
			.box.box3
				a(href="/Activity")
					i.fa.fa-plus-circle(aria-hidden='true')
					h5 Plannen
			.box.box4
				a(href="/messages")
					i.fa.fa-comments(aria-hidden='true')
					h5 Berichten
			.box.box5
				a(href="/profile")
					i.fa.fa-user(aria-hidden='true')
					h5 Profiel
		script(src="js/activity.js")
