doctype html
html(lang='en')
	head
		title Add friends
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		include bottomNavbarStyle
		link(href ='css/addFriends.css' type='text/css' rel='stylesheet')
		link(href ='css/bottomNavbar.css' type='text/css' rel='stylesheet')
		link(href ='css/topNavbar.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
	body
		nav.navbar-fixed-top.navbar.navbar-default
			.row
				.col-xs-6.left.edit
				.col-xs-6.right.edit
				img.image(src='img/kwfLogo.png')
		.container
			form(action='/addFriends', method='post', role='form')
				.row
					.col-md-8.col-md-push-4.col-xs-10-col-xs-push-1
						.checkbox
							label
								input(type="checkbox", onclick='toggle(this)')
								span.cr
									i.cr-icon.glyphicon.glyphicon-ok
								h3 Select All
											
				each notFriend in notFriends
					//- .checkbox.checkBoxStyle.boks.checkbox-circle
					.row
						.col-md-8.col-md-push-4.col-xs-10-col-xs-push-1
							.checkbox
								label
									input(type="checkbox", value= notFriend.id, name='friends')
									span.cr
										i.cr-icon.glyphicon.glyphicon-ok
									h3 #{notFriend.name}
								
								img.foto(src=notFriend.image)
				.doorgaan.text-center
					button.btn.btn.change(type='submit') Add Friends
		include bottomNavbar
		script(src="js/activity.js")
