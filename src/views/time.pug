doctype html
html(lang='en')
	head
		title Activiteit
		link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		link(href = 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' type='text/css' rel='stylesheet')
		link(href ='css/time.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
		link(href ='css/bottomNavbar.css' type='text/css' rel='stylesheet')
		link(href ='css/topNavbar.css' type='text/css' rel='stylesheet')
		link(href ='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' type='text/css' rel='stylesheet')
	body
		.container
			form(method='post', action='/time?categorie=' + categorie + '&friends=' + friend + '&friendsIds=' + friendsIds, autocomplete="off")
				.col-xs-12
					.col-xs-2.col-xs-push-5
						i.icon(class="fa fa-clock-o" aria-hidden="true")
				.col-xs-12
					div.when
						.row
							.col-xs-4
								p.day Dag
							.col-xs-4
								p Uur
							.col-xs-4
								p Minuten
						.row
							.col-xs-4
								input#registration-date.form-control(name='date', type='date')
							.col-xs-4
								input#registration-time.form-control(name='time', type='time')
								span.input-group-btn
									button.btn.btn-default(type='button', onclick='addNow()')
										span.glyphicon.glyphicon-map-marker(aria-hidden='true')
										|  Now
									button.btn.btn-default(type='button', onclick='stopNow()')
										span.glyphicon.glyphicon-minus-sign(aria-hidden='true')
										|  Stop
				.col-xs-2.col-xs-push-5
					i.icon(class="fa fa-map-marker" aria-hidden="true")
				.col-sm-3.col-sm-push-4
					div.where
						.radio
							label
							input(type='radio', name='location', value='My home')
							| Mijn huis
						.radio
							label
							input(type='radio', name='location', value='Somewhere else')
							| Ergens anders
					button.btn.btn-success.btn-lg.submit(type='submit') Klaar
		nav.navbar-fixed-bottom.navbar.navbar-default
			.container
				.row
					ul.nav.nav-justified
						li.active
							a(href="/activity") Plan Activity
						li
							a(href='/addFriends') Add Friends
						li
							a(href='/notification') Notification
						li
							a(href='/profile') Profile
	script(src='http://momentjs.com/downloads/moment-with-locales.js')
	script(src='http://momentjs.com/downloads/moment-timezone-with-data.js')
	script(src='js/activity.js')