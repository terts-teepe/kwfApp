doctype html
html(lang='en')
	head
		link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		link(href ='css/login.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
	body
		h1.text-center.col-md-12.layout Vriendendienst
		.container
			.col-md-6.col-md-push-3.col-xs-8.col-xs-push-2.text-center
				form(method='post', action='/login', autocomplete="off")
					.form-group
						input.form-control(class="login", type="text", name="name", id='username')
					.form-group
						input.form-control(class="login", type="password", name="password", id="pass")
					.form-group
						input(type='checkbox' id="remember_me")
						|Remember me
					.form-group
						button.btn.form-control(class="submit" type="submit") Log in
					a(href='/name') Register here!
		nav.navbar-fixed-bottom.navbar.navbar-default
			.row
				.col-xs-6.left Powered by
				.col-xs-6.right KWF
				img(src='img/kwfLogo.png')

	script(src='js/jquery-3.2.1.js')
	script(src='js/login.js')