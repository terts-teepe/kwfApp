		.container-fluid
			h1.text-center.layout Vrijwilligers in de buurt
			.col-md-6.col-md-push-3.col-xs-12.text-center.wrapper-one
				img.boks(src='img/volunteersGroot.png')
		.wrapper.navbar-fixed-bottom
			.box.box1
				a(href="/addFriends")
					i.fa.fa-user-plus(aria-hidden='true')
