doctype html
html(lang='en')
	head
		link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		include bottomNavbarStyle
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
		link(href ='css/volunteers.css' type='text/css' rel='stylesheet')
		link(href ='css/bottomNavbar.css' type='text/css' rel='stylesheet')
		link(href ='css/topNavbar.css' type='text/css' rel='stylesheet')
		link(href ='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' type='text/css' rel='stylesheet')
	body
		.row
			.col-xs-2.styleBackButton
				a(href='javascript:history.back()')
					i.backBtn.fa.fa-chevron-left.fa-lg(aria-hidden='true')
		nav.navbar-fixed-top.navbar.navbar-default
			.row
				.col-xs-12
					.col-xs-6.left.edit
					.col-xs-6.right.edit
					//- img.image(src='img/kwfLogo.png')
		.container-fluid
			.text-center
				h1.header Vrijwilligers in de buurt
			.col-md-6.col-md-push-3.col-xs-12.text-center.wrapper-one
				img.boks(src='img/volunteersGroot.png')
				a#trapParent.pierre(href='/profielPierre')
				a#trapParent.terts(href='/profielTerts')
		.wrapper.navbar-fixed-bottom
			.box.box1
				a(href="/addFriends")
					i.fa.fa-user-plus(aria-hidden='true')
					h5 Vrienden
			.box.box2
				a(href="/index")
					i.fa.fa-list(aria-hidden='true')
					h5 Activiteiten
			.box.box3
				a(href="/Activity")
					i.fa.fa-plus-circle(aria-hidden='true')
					h5 Plannen
			.box.box4
				a(href="/messages")
					i.fa.fa-comments(aria-hidden='true')
					h5 Berichten
			.box.box5
				a(href="/profile")
					i.fa.fa-user(aria-hidden='true')
					h5 Profiel
	script(src="js/activity.js")
		