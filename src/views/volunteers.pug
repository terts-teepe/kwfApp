			.box.box2
				a(href="/index")
					i.fa.fa-list(aria-hidden='true')
					h5 Activiteiten
			.box.box3
				a(href="/Activity")
					i.fa.fa-plus-circle(aria-hidden='true')
					h5 Plannen
			.box.box4
				a(href="/messages")
					i.fa.fa-comments(aria-hidden='true')
