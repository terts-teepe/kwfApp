doctype html
html(lang='en')
	head
		title Activity
		link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
	body
		.container
			div.categorie
				h1 Choose an activity
				.radio
					label
					input(type='radio', name='optradio')
					| Groceries
				.radio
					label
					input(type='radio', name='optradio')
					| Drive me
				.radio
					label
					input(type='radio', name='optradio')
					| Baby sit
				.radio
					label
					input(type='radio', name='optradio')
					| Cook
			div.choose
				h1 Choose who you want to ask for help
				each friend in friends
					.checkbox
						label
							input(type='checkbox', name='friends')
							h3 #{friend}
			div.when
				h1 When do you want help?
				.radio
					label
					input(type='radio', name='optradio1')
					| Now
				.radio
					label
					input(type='radio', name='optradio1')
					| Other Time
			div.where
				h1 Where do you want help?
				.radio
					label
					input(type='radio', name='optradio2')
					| My current location
				.radio
					label
					input(type='radio', name='optradio2')
					| Somewhere else
			button.btn.btn-success.btn-lg
				a(href='/home') Plan Activity!
			