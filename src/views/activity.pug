doctype html
html(lang='en')
	head
		title Activity
		link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
	body
		.container
			form(method='post', action='/activity', autocomplete="off")
				div.categorie
					h1 Choose an activity
					.radio
						label
						input(type='radio', name='categorie', value='Groceries')
						| Groceries
					.radio
						label
						input(type='radio', name='categorie', value='Drive me')
						| Drive me
					.radio
						label
						input(type='radio', name='categorie', value='Baby sit')
						| Baby sit
					.radio
						label
						input(type='radio', name='categorie', value='Cook')
						| Cook
				div.choose
					h1 Choose who you want to ask for help
					each friend in friends
						.checkbox
							label
								input(type='checkbox', name='friends', value=friend)
								h3 #{friend}
				div.when
					h1 When do you want help?
					.radio
						label
						input(type='radio', name='time', value='Now')
						| Now
					.radio
						label
						input(type='radio', name='time', value='Other Time')
						| Other Time
				div.where
					h1 Where do you want help?
					.radio
						label
						input(type='radio', name='location', value='My current location')
						| My current location
					.radio
						label
						input(type='radio', name='location', value='Somewhere else')
						| Somewhere else
				button.btn.btn-success.btn-lg.submit(type='submit') Plan Activity!