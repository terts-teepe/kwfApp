doctype html
html(lang='en')
	head
		title Activity
		link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
		link(href ='css/activity.css' type='text/css' rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
	body
		.container
			form(method='post', action='/activity', autocomplete="off")
				div.categorie
					h1 Choose an activity
					.radio
						label
						input(type='radio', name='categorie', value='Groceries')
						| Groceries
					.radio
						label
						input(type='radio', name='categorie', value='Drive me')
						| Drive me
					.radio
						label
						input(type='radio', name='categorie', value='Baby sit')
						| Baby sit
					.radio
						label
						input(type='radio', name='categorie', value='Cook')
						| Cook
				div.choose
					h1 Choose who you want to ask for help
					each friend in friends
						.checkbox
							label
								input(type='checkbox', name='friend', value=friend)
								h3 #{friend}
				div.when
					h1 When do you want help?
							label.control-label.col-sm-3(for='registration-date')
							.input-group.registration-date-time
								span#basic-addon1.input-group-addon
									span.glyphicon.glyphicon-calendar(aria-hidden='true')
								input#registration-date.form-control(name='registration_date', type='date')
								span#basic-addon1.input-group-addon
									span.glyphicon.glyphicon-time(aria-hidden='true')
								input#registration-time.form-control(name='registration_time', type='time')
								span.input-group-btn
									button.btn.btn-default(type='button', onclick='addNow()')
										span.glyphicon.glyphicon-map-marker(aria-hidden='true')
										|  Now
									button.btn.btn-default(type='button', onclick='stopNow()')
										span.glyphicon.glyphicon-minus-sign(aria-hidden='true')
										|  Stop
				div.where
					h1 Where do you want help?
					.radio
						label
						input(type='radio', name='location', value='My current location')
						| My current location
					.radio
						label
						input(type='radio', name='location', value='Somewhere else')
						| Somewhere else
				button.btn.btn-success.btn-lg.submit(type='submit') 
					a(href='/profile') Plan Activity!
		nav.navbar-fixed-bottom.navbar.navbar-default
			.container
				.row
					ul.nav.nav-justified
						li.active
							a(href="/addFriends") Add Friends	
						li
							a(href='/agenda') Agenda
						li
							a(href='/notification') Notification
						li
							a(href='/profile') Profile
	script(src='http://momentjs.com/downloads/moment-with-locales.js')
	script(src='http://momentjs.com/downloads/moment-timezone-with-data.js')
	script(src='js/activity.js')